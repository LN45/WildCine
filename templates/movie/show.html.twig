{% extends 'base.html.twig' %}

{% block title %}Movies{% endblock %}

{% block body %}
<div class="row justify-content-center mt-5">
    <div class="col-lg-12 col-md-12 col-xs-12 justify-content-center">
        <h2 class="mt-2 mb-2 mx-auto">{{movie.title }}</h2>
    </div>
    <div class="col-lg-2 col-md-3 col-xs-4 justify-content-center">
        <div class="card mt-3 pt-2 pb-2 ml-3 mr-3 card_cover container_image">
            <img class="cover_film mx-auto" src="{{movie.image }}" alt="cover">
        </div>
    </div>
</div>
<div class="row justify-content-center">
    <div class="col-lg-7 col-md-7 col-xs-7 justify-content-center">
        <h5 class="mt-5">Notes spectateurs : <span>{{movie.critics }}</span></h5>
    </div>
</div>
<div class="row justify-content-center">
    <div class="col-lg-7 col-md-7 col-xs-7 justify-content-center">
        <h5 class="mt-5">Acteurs : {% for actor in actors %}Â <a href="{{ path('actor_show', {'id': actor.id}) }}">{{ actor.firstname }} {{ actor.name }}</a>, {% endfor %}</h5>
    </div>
</div>
<div class="row justify-content-center">
    <div class="col-lg-7 col-md-7 col-xs-7 justify-content-center">
        <h6 class="mt-5">Synopsis : </h6>
        <p class="mt-3 mb-2 mx-auto">{{movie.synopsis }}</p>
    </div>
</div>
{% endblock %}
