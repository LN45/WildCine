{% extends 'base.html.twig' %}

{% block title %}Movies{% endblock %}

{% block body %}
    {% include '_navbar.html.twig' %}
<div class="row justify-content-center mt-2">
    <div class="col-lg-12 col-md-12 col-xs-12 justify-content-center">
        <h2 class="mt-1 mb-5 mx-auto title_film">{{movie.title }}</h2>
    </div>
<div class="container-fluid">
    <div class="row">
        <div class="offset-1 col-lg-4 col-xs-12">
            <div class="w3-card-4" style="width:80%">
                <img class="cover_film image_film" src="{{ movie.image }}" alt="cover" style="width:100%">
            </div>
        </div>
        <div class="col-lg-6 col-md-4 offset-1">
            <div class="container">
                <h5 class="mt-5">Notes spectateurs : <span>{{movie.critics }}</span></h5>
            </div>
            <div class="container">
                <h6 class="mt-5">Synopsis : </h6>
                <p class="mt-3 mb-2 mx-auto pr-5">{{movie.synopsis }}</p>
            </div>
            <div class="container mt-5">
                <h5 class="mt-5">Acteurs : </h5>
                <div class="row mt-5">
                    {% for actor in actors %}
                        <div class="col-lg-4 col-md-12 col-md-12">
                            <div class="w3-card-4" style="width:100%">
                                <a href="{{ path('actor_show', {'id': actor.id}) }}">
                                <img src="{{ actor.picture }}" class="image_actor" alt="actor">
                                </a>
                                <p class="name_actor mt-1">{{ actor.firstname }} {{ actor.name }}</p>
                            </div>
                            <div class="glow-wrap">
                                <i class="glow"></i>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
</div>
{% endblock %}
